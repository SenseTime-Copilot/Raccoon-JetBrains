<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.sensetime.sensecore.sensecodeplugin</id>
    <name>SenseCode</name>
    <vendor>SenseTime</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService
                serviceImplementation="com.sensetime.sensecore.sensecodeplugin.services.MyApplicationService"/>
        <projectService serviceImplementation="com.sensetime.sensecore.sensecodeplugin.services.MyProjectService"/>

        <toolWindow id="SenseCode"
                    factoryClass="com.sensetime.sensecore.sensecodeplugin.ui.GptMentorToolWindowFactory"
                    icon="com.sensetime.sensecore.sensecodeplugin.ui.Icons.ToolWindow"
                    anchor="right">

        </toolWindow>

        <iconMapper mappingFile="GPT MentorIconMappings.json "/>
    </extensions>

    <actions>
        <group id="org.intellij.sdk.action.GroupedActions" text="SenseCode"
               popup="true">
            <!--            Add actions to the tools menu-->
            <add-to-group
                    group-id="ToolsMenu"
                    anchor="last">
            </add-to-group>

            <!--            Right-click in the editor-->
            <add-to-group
                    group-id="EditorPopupMenu"
                    anchor="last">
            </add-to-group>

            <action id="generateCode" class="com.sensetime.sensecore.sensecodeplugin.actions.editor.GenerateCodeAction"
                    text="Generate Code">
                <keyboard-shortcut first-keystroke="control alt shift G" keymap="$default" replace-all="true"/>
                <keyboard-shortcut first-keystroke="control alt shift G" keymap="Mac OS X" replace-all="true"/>
                <keyboard-shortcut first-keystroke="control alt shift G" keymap="Mac OS X 10.5+" replace-all="true"/>
            </action>

            <action id="generateTest" class="com.sensetime.sensecore.sensecodeplugin.actions.editor.GenerateTestAction"
                    text="Generate Test">
                <keyboard-shortcut first-keystroke="control alt shift T" keymap="$default" replace-all="true"/>
                <keyboard-shortcut first-keystroke="control alt shift T" keymap="Mac OS X" replace-all="true"/>
                <keyboard-shortcut first-keystroke="control alt shift T" keymap="Mac OS X 10.5+" replace-all="true"/>
            </action>
            <action id="correctCode" class="com.sensetime.sensecore.sensecodeplugin.actions.editor.CorrectCodeAction"
                    text="Correct Code">
                <keyboard-shortcut first-keystroke="control alt shift C" keymap="$default" replace-all="true"/>
                <keyboard-shortcut first-keystroke="control alt shift C" keymap="Mac OS X" replace-all="true"/>
                <keyboard-shortcut first-keystroke="control alt shift C" keymap="Mac OS X 10.5+" replace-all="true"/>
            </action>
            <action id="refactorCode" class="com.sensetime.sensecore.sensecodeplugin.actions.editor.RefactorCodeAction"
                    text="Refactor Code">
                <keyboard-shortcut first-keystroke="control alt shift R" keymap="$default"/>
                <keyboard-shortcut first-keystroke="control alt shift R" keymap="Mac OS X" replace-all="true"/>
                <keyboard-shortcut first-keystroke="control alt shift R" keymap="Mac OS X 10.5+" replace-all="true"/>
            </action>
            <action id="promptFromSelection"
                    class="com.sensetime.sensecore.sensecodeplugin.actions.editor.PromptFromSelectionAction"
                    text="Prompt From Selection">
                <keyboard-shortcut first-keystroke="control alt shift P" keymap="$default"/>
                <keyboard-shortcut first-keystroke="control alt shift P" keymap="Mac OS X" replace-all="true"/>
                <keyboard-shortcut first-keystroke="control alt shift P" keymap="Mac OS X 10.5+" replace-all="true"/>
            </action>
            <action id="appendSelectionToPrompt"
                    class="com.sensetime.sensecore.sensecodeplugin.actions.editor.AppendPromptFromSelectionAction"
                    text="Append Selected Text">
                <keyboard-shortcut first-keystroke="control alt shift S" keymap="$default"/>
                <keyboard-shortcut first-keystroke="control alt shift S" keymap="Mac OS X" replace-all="true"/>
                <keyboard-shortcut first-keystroke="control alt shift S" keymap="Mac OS X 10.5+" replace-all="true"/>
            </action>
        </group>

        <group id="gptMentorFileActions" text="SenseCode"
               popup="true">
            <!--            Right-click on a file in the file tree -->
            <add-to-group
                    group-id="CutCopyPasteGroup"
                    anchor="last">
            </add-to-group>

            <action id="promptFromFile"
                    class="com.sensetime.sensecore.sensecodeplugin.actions.file.NewPromptFromFileAction"
                    text="New Prompt From File(s)"/>

            <action id="appendPromptFromFile"
                    class="com.sensetime.sensecore.sensecodeplugin.actions.file.AppendPromptFromFileAction"
                    text="Append Prompt With File(s)"/>
        </group>

        <action id="addGitCommitsToPrompt"
                class="com.sensetime.sensecore.sensecodeplugin.actions.git.AddGitCommitsToPromptAction"
                text="Add Commits To Prompt">
            <add-to-group group-id="Vcs.Log.ContextMenu"/>
        </action>

    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable
                instance="com.sensetime.sensecore.sensecodeplugin.configuration.GptMentorConfigurable"
                id="dev.jamiecraane.fasttravel.configuration.FastTravelConfigurable"
                displayName="SenseCode"/>

        <applicationService
                serviceImplementation="com.sensetime.sensecore.sensecodeplugin.configuration.GptMentorSettingsState"/>

        <applicationService
                serviceImplementation="com.sensetime.sensecore.sensecodeplugin.ui.history.state.HistoryState"/>
    </extensions>

</idea-plugin>
